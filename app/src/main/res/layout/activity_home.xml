<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/speeed2"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="W-Speed"
        android:fontFamily="@font/ubuntubolditalic"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_speed"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="62dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:drawableStart="@drawable/ic_speed"
        android:drawableTint="@color/white"
        android:text="Kecepatan Sudut"
        android:fontFamily="@font/ubuntubold"
        android:textColor="@color/white"
        android:background="@drawable/button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tach"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:drawableStart="@drawable/ic_spin"
        android:drawableTint="@color/white"
        android:text="Tachometer"
        android:fontFamily="@font/ubuntubold"
        android:textColor="@color/white"
        android:background="@drawable/button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_speed"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_freq"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:drawableStart="@drawable/ic_freq"
        android:drawableTint="@color/white"
        android:text="Frekuensi"
        android:fontFamily="@font/ubuntubold"
        android:textColor="@color/white"
        android:background="@drawable/button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_tach"/>

</androidx.constraintlayout.widget.ConstraintLayout>